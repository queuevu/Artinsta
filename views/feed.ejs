<!DOCTYPE html>
<html>
<head>
  <title>Art Gallery</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      margin: 0;
      padding: 20px;
    }

    .gallery-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    .art-card {
      background: #fff;
      width: 300px;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: 0.3s;
    }

    .art-card:hover {
      transform: translateY(-5px);
    }

    .art-image {
      width: 100%;
      height: 250px;
      object-fit: cover;
    }

    .card-content {
      padding: 15px;
    }

    .artist-section {
      display: flex;
      align-items: center;
      margin-top: 10px;
      gap: 10px;
    }

    .artist-photo {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #ddd;
    }

    .artist-name {
      font-weight: bold;
      font-size: 16px;
    }

    .description {
      margin-top: 10px;
      color: #555;
      font-size: 14px;
      line-height: 1.4;
    }
  </style>
</head>

<body>

  <h1 style="text-align:center; margin-bottom:30px;">Art Gallery</h1>
    <div class="gallery-container">
  <% arts.forEach(art => { %>
    <div class="art-card">
      
      <!-- Artwork Image -->
      <img class="art-image" src="/uploads/<%= art.artwork_image_file %>" alt="Artwork Image">

      <div class="card-content">

        <!-- Artist Section -->
        <div class="artist-section">
          <% if (art.profile_photo) { %>
            <img class="artist-photo" src="/uploads/<%= art.profile_photo %>" alt="Artist Photo">
          <% } %>
          <span class="artist-name"><%= art.Artist_Name || art.Full_Name || "Unknown Artist" %></span>
        </div>

        <!-- Artwork Title -->
        <h3 style="margin-top: 10px; font-size: 18px;"><%= art.Artwork_Title || "Untitled Artwork" %></h3>

        <!-- Description -->
        <p class="description"><%= art.Description_art || "No description provided." %></p>

      </div>

    </div>
  <% }); %>
</div>

  


</body>
</html>
